{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "linebreak-style": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
