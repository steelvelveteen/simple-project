{
  "name": "simple-template",
  "version": "1.0.0",
  "description": "A simple project template similar to the existing project-template project but without any webpack configuration",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf node_modules/ && rm -rf package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "author": "Joey Vico",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "typescript": "^5.0.2"
  }
}
